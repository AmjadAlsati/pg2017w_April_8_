<?xml version="1.0"?>
<package format="2">
  <name>cooperative_driving_hardware</name>
  <version>0.0.1</version>
  <description>The cooperative_driving hardware package</description>

  <maintainer email="julian93@mail.upb.de">Julian Heinovski</maintainer>
