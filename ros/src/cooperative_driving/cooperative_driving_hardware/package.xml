  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>hardware_interface</build_depend>
  <build_depend>message_generation</build_depend>

  <depend>controller_interface</depend>
  <depend>controller_manager</depend>
  <depend>nodelet</depend>
  <depend>roscpp</depend>
  <depend>std_msgs</depend>
  <depend>cooperative_driving_common</depend>
  <depend>cooperative_driving_networking</depend>

  <exec_depend>diff_drive_controller</exec_depend>
  <exec_depend>message_runtime</exec_depend>
  <exec_depend>nav_msgs</exec_depend>
  <exec_depend>xacro</exec_depend>
  <exec_depend>cooperative_driving_description</exec_depend>

  <export>
    <controller_interface plugin="${prefix}/controller_interface_plugins.xml"/>
    <nodelet plugin="${prefix}/nodelet_plugins.xml" />
  </export>
</package>
